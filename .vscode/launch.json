{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Serve and Launch Chrome",
        "type": "pwa-chrome",
        "request": "launch",
        "preLaunchTask": "npm: ngServe",
        "url": "http://localhost:3041/#",
        "webRoot": "${workspaceFolder}", 
        "sourceMaps": true,  
        "timeout": 60000
      },
      {
        "name": "Main",
        "type": "node",
        "preLaunchTask": "Build.Main",
        "request": "launch",
        "protocol": "inspector",
        "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
        "runtimeArgs": [
            "--serve=http://localhost:3041/#",
               ".",
               "--remote-debugging-port=9223"
              ],
        "windows": {
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
        }
    },
    {
        "name": "Serve Renderer",
        "type": "pwa-chrome",
        "request": "attach",
        "port": 9223,
        "preLaunchTask": "Renderer.Serve",
        "url": "http://localhost:3041",
        "trace": true,
        "sourceMaps": true,  
        "webRoot": "${workspaceFolder}",
        "timeout": 60000
    },
  ],
  "compounds": [
    {
        "name": "Electron: All",
        "configurations": [
            "Main",
            "Serve Renderer"
        ]
    }
  ]    
}